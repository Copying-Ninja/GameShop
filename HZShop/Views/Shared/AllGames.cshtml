@model Game

<div class="col-lg-4">
    <img class="img-thumbnail img-fluid" src="@Model.img" alt="@Model.name" />
    <h2>@Model.name </h2>
    <p>@Model.shortDesc</p>
    <p>
        Ціна: @Model.price.ToString("c")
    </p>
    <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="addToCart" asp-route-id="@Model.id">Додати в корзину</a></p>
</div>