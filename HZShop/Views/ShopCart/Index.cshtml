@model ShopCartViewModel

<div class="container">
    @foreach(var el in Model.shopCart.listCartItems)
    {
        <div class="alert alert-warning mt-3">
            <strong>Гра:</strong> @el.Game.name<br />
            <strong>Ціна:</strong> @el.Game.price.ToString("c")
        </div>
    }
    <hr />
    <a class="btn btn-danger" asp-controller="Order" asp-action="Checkout">Сплатити</a>

</div>